
<%= form_for @contact, :url => { action: "create" }, :html => { method: :post, honeypot: true } do |f| %>
  
  <div class="row">
    <div class="form-group col-lg-6">
      <%= f.label "Name" %>
      <%= f.text_field :sender_name, class: "form-control" %>
    </div>
    <div class="form-group col-lg-6">
      <%= f.label "Email" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="clearfix"></div>

  <div class="row">
    <div class="form-group col-lg-12">
      <%= f.label "Message" %>
      <%= f.text_area :message, class: "form-control", :maxlength => "5000", :rows => 10 %>
    </div>
  </div>                            
                           
  <div class="form-group col-lg-6">
    <%= f.submit "Send Message", :class => "btn btn-primary" %>        
    <%= submit_tag "Cancel", :type => :reset, :class => "btn btn-default" %>        
  </div>
  
<% end %>
