<!DOCTYPE html>
<html>
  <head>
    
    <title>Kenvaczi</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= favicon_link_tag %>
    <%= csrf_meta_tags %>

  </head>
  <body> 

    <div id="content-wrap">

      <!-- Alerts -->  
      <%= render partial: "layouts/flash_messages" %>
      <div class="brand-wrapper">
        <div class="brand">Ken Vaczi</div>
        <div class="brand-logo"></div>
      </div>

      <div class="address-bar">Content nobody asked for</div>

      <!-- Navigation -->
      <nav class="navbar navbar-default" role="navigation">
        <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <!-- navbar-brand is hidden on larger screens, but visible when the menu is collapsed -->
            <a class="navbar-brand" href="/">Ken Vaczi</a>
          </div>
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="navbar-collapse-1">
            <ul class="nav navbar-nav navbar-left">
              <li>
                <%= link_to "Blog", root_path %> 
              </li>
              <li>
                <%= link_to "Archive", blog_index_path %> 
              </li>
              <li>
                <%= link_to "Projects", projects_path %> 
              </li>
              <li>
                <%= link_to "Me", about_path %> 
              </li>
              
            </ul>
            <ul class="nav navbar-nav navbar-right social">
              <li>
                <%= link_to "", contact_path, class: "fa fa-envelope-square fa-3x" %>
              </li>
              <li>
                <%= link_to "", "https://github.com/kbvaczi", class: "fa fa-github-square fa-3x", target: "_blank" %>
              </li>
              <li>
                <%= link_to "", "https://www.linkedin.com/in/kenneth-vaczi-58b0b338", class: "fa fa-linkedin-square fa-3x", target: "_blank" %>
              </li>
            </ul>
          </div>
          <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
      </nav>
      
      <div class="main">
        <%= yield %>
      </div>
    </div>

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <p>Copyright &copy; <%= Time.now.year %> by Ken Vaczi</p>
            <p>Background image courtesy <%= link_to "Jerald Jackson", "https://www.flickr.com/photos/12287146@N04/", target: "_blank" %></p>
          </div>
        </div>
      </div>
    </footer>
  <div class="static-background"></div>         
  </body>

</html>
